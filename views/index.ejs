<%- include ('partials/header.ejs') %>
  <%- include ('partials/homenavbar.ejs') %>

    <body>
      <div class="container">
        <hr>
        <div class="jumbotron">
          <h1 class="display-4">Bem vindo!</h1>
          <p class="lead">Esse é um exemplo de um blog</p>
          <hr class="my-4">
          <p>Um blog desenvolvido com Node.Js, express, bootstrap e Mysql.</p>
          <a class="btn btn-primary btn-lg" href="#" role="button">Leia mais</a>
        </div>
        <hr>
         <% if(articles.length == 0){ %>
          <h3>Não existe artigo nessa categoria!</h3>
         <% } %>
         <hr>
        <% articles.forEach(article=> { %>
          <div class="card">
            <div class="card-header">
              <h2>
                <%= article.title %>
              </h2>
            </div>
            <div class="card-body">
              <a href="/<%= article.slug %>" class="btn btn-success">Ler Artigo</a>
            </div>
          </div>
          <br>
          <% }) %>
            <div class="row">
              <div class="col col-12"></div>
              <a style="float:right" href="/articles/page/2"> Next >></a>
            </div>
            <hr>
      </div>
      <hr>
      </div>
    </body>


    <%- include ('partials/footer.ejs') %>